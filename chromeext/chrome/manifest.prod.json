{
  "version": "1.1.1",
  "name": "Sourcegraph Chrome extension for GitHub",
  "manifest_version": 2,
  "description": "Sourcegraph browser extension for Chrome",
  "browser_action": {
    "default_title": "Sourcegraph"
  },
  "icons": {
    "16": "img/icon-16.png",
    "48": "img/icon-48.png",
    "128": "img/icon-128.png"
  },
  "web_accessible_resources": [
    "inject.html"
  ],
  "background": {
    "page": "background.html"
  },
  "permissions": [ "contextMenus", "tabs", "storage", "https://github.com/*", "https://sourcegraph.com/" ],
  "content_security_policy": "default-src 'self'; script-src 'self'; style-src * 'unsafe-inline'; img-src 'self' data:;"
}
