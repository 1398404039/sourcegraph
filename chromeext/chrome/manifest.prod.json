{
  "version": "1.1.4",
  "name": "Sourcegraph Chrome extension for GitHub",
  "manifest_version": 2,
  "description": "Sourcegraph browser extension for Chrome",
  "browser_action": {
    "default_title": "Sourcegraph"
  },
  "icons": {
    "16": "img/icon-16.png",
    "48": "img/icon-48.png",
    "128": "img/icon-128.png"
  },
  "content_scripts": [{
    "matches": ["https://github.com/*", "https://www.github.com/*", "https://sourcegraph.com/*", "https://www.sourcegraph.com/*"],
    "run_at": "document_end",
    "js": ["js/inject.bundle.js"]
  }],
  "web_accessible_resources": [
    "inject.html", "js/inject.bundle.js"
  ],
  "background": {
    "page": "background.html"
  },
  "permissions": [ "contextMenus", "storage", "https://github.com/*", "https://www.github.com/*", "https://sourcegraph.com/*", "https://www.sourcegraph.com/*" ],
  "content_security_policy": "default-src 'self'; script-src 'self'; style-src * 'unsafe-inline'; img-src 'self' data:;"
}
