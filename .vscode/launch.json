{
  "version": "0.1.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Mocha Tests",
      "cwd": "${workspaceFolder}/web",
      "program": "${workspaceFolder}/web/node_modules/mocha/bin/_mocha",
      "args": ["--require", "ts-node/register", "--colors", "--no-timeouts", "src/**/*.test.ts?(x)"],
      "env": {
        "TS_NODE_COMPILER_OPTIONS": "{\"module\":\"commonjs\"}"
      },
      "internalConsoleOptions": "openOnSessionStart"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Mocha E2E Tests",
      "cwd": "${workspaceFolder}/web",
      "program": "${workspaceFolder}/web/node_modules/mocha/bin/_mocha",
      "args": [
        "--require",
        "ts-node/register",
        "--require",
        "src/util/long-stack-traces.ts",
        "--colors",
        "--no-timeouts",
        "src/**/*.test.e2e.ts?(x)",
        "--bail"
      ],
      "internalConsoleOptions": "openOnSessionStart",
      "env": {
        // "SOURCEGRAPH_BASE_URL": "https://sourcegraph.com",
        "TS_NODE_COMPILER_OPTIONS": "{\"module\":\"commonjs\"}"
      }
    },
    {
      "name": "ui",
      "type": "chrome",
      "request": "attach",
      "port": 9222,
      "webRoot": "${workspaceRoot}/web",
      "url": "http://localhost:3080/*",
      "sourceMaps": true
    },
    {
      "name": "Attach to frontend",
      "type": "go",
      "request": "launch",
      "mode": "remote",
      "remotePath": "${workspaceRoot}",
      "port": 2345,
      "host": "127.0.0.1",
      "program": "${workspaceRoot}",
      "env": {},
      "args": []
    },
    {
      "name": "Attach to searcher",
      "type": "go",
      "request": "launch",
      "mode": "remote",
      "remotePath": "${workspaceRoot}",
      "port": 2346,
      "host": "127.0.0.1",
      "program": "${workspaceRoot}",
      "env": {},
      "args": []
    }
  ],
  "compounds": [
    {
      "name": "Attach to all",
      "configurations": ["frontend", "searcher"]
    }
  ]
}
