{
  "version": "0.0.0",
  "name": "Sourcegraph for GitHub",
  "manifest_version": 2,
  "description": "DEV",
  "browser_action": {
    "default_title": "Sourcegraph"
  },
  "icons": {
    "16": "img/icon-16.png",
    "48": "img/icon-48.png",
    "128": "img/icon-128.png"
  },
  "web_accessible_resources": [
    "inject.html"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://github.com/*",
        "https://sourcegraph.com/*"
      ],
      "run_at": "document_end",
      "css": [
        "css/highlight.css"
      ]
    }
  ],
  "background": {
    "page": "background.html"
  },
  "options_ui": {
    "page": "options.html",
    "chrome_style": true
  },
  "permissions": [
    "cookies",
    "tabs",
    "storage",
    "https://github.com/*",
    "https://sourcegraph.com/*",
    "http://phabricator.aws.sgdev.org/*",
    "http://node.aws.sgdev.org:30000/*",
    "http://localhost:7990/*"
  ],
  "optional_permissions": [
    "http://*/",
    "https://*/"
  ],
  "content_security_policy": "default-src 'self'; script-src 'self' https://localhost:3000  https://sourcegraph-logging.telligentdata.com 'unsafe-eval'; connect-src https://sourcegraph.com/ https://sourcegraph-logging.telligentdata.com https://localhost:3000 wss://localhost:3000;"
}
