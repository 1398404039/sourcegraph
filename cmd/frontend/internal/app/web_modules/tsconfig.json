{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "moduleResolution": "node",
        "baseUrl": "./",
        "paths": {
            "sourcegraph/*": [
                "./sourcegraph/*"
            ],
            "@sourcegraph/components/*": [
                "./node_modules/@sourcegraph/components/src/*"
            ],
            "*": [
                "node_modules/@types/*",
                "*"
            ]
        },
        "lib": [
            "es2016",
            "dom"
        ],
        "typeRoots": ["./node_nodules/@types"],
        "jsx": "react",
        "allowJs": true,
        "sourceMap": true,
        "strictNullChecks": true,
        "experimentalDecorators": true,
        "noEmit": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true
    },
    "exclude": [
        "node_modules"
    ]
}
