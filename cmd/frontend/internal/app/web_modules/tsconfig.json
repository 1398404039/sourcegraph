{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "baseUrl": "./",
    "paths": {
      "sourcegraph/*": [
        "sourcegraph/*"
      ],
      "@sourcegraph/components/src/*": [
        "node_modules/@sourcegraph/components/src/*"
      ]
    },
    "lib": [
      "es2017",
      "dom",
      "dom.iterable",
      "es2017.object"
    ],
    "jsx": "react",
    "allowJs": true,
    "sourceMap": true,
    "strictNullChecks": true,
    "experimentalDecorators": true,
    "noEmit": true,
    "noUnusedLocals": true,
    "noUnusedParameters": false,
    "downlevelIteration": true,
    "plugins": [
      {
        "name": "tslint-language-service",
        "configFile": "./tslint.json"
      }
    ]
  },
  "exclude": [
    "node_modules"
  ]
}
