{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "type": "npm",
      "script": "lint",
      "problemMatcher": {
        "fileLocation": "absolute",
        "owner": "tslint",
        "pattern": {
          "regexp": "^(\\w+): (.+)\\[(\\d+), (\\d+)\\]: (.*)$",
          "severity": 1,
          "file": 2,
          "line": 3,
          "column": 4,
          "message": 5
        }
      }
    },
    {
      "type": "npm",
      "script": "build",
      "problemMatcher": {
        "fileLocation": "relative",
        "owner": "typescript",
        "severity": "error",
        "pattern": [
          {
            "regexp": "^ERROR in (.+)$",
            "file": 1
          },
          {
            "regexp": "^\\((\\d+),(\\d+)\\): error TS\\d+: (.+)$",
            "line": 1,
            "column": 2,
            "message": 3
          }
        ]
      }
    },
    {
      "type": "npm",
      "script": "watch",
      "isBackground": true,
      "problemMatcher": {
        "fileLocation": "relative",
        "owner": "typescript",
        "severity": "error",
        "pattern": [
          {
            "regexp": "^ERROR in (.+)$",
            "file": 1
          },
          {
            "regexp": "^\\((\\d+),(\\d+)\\): error TS\\d+: (.+)$",
            "line": 1,
            "column": 2,
            "message": 3
          }
        ],
        "background": {
          "activeOnStart": false,
          "beginsPattern": "^Begin compile at .*$",
          "endsPattern": "^Time: .*$"
        }
      }
    }
  ]
}
