{
  // Use IntelliSense to learn about possible Node.js debug attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      // This is a cluster configuration that does not attach a debugger
      // The debugger doesn't make sense with cluster because each worker needs its own session
      "name": "Cluster",
      "type": "node",
      "request": "launch",
      "program": "${workspaceRoot}/lib/language-server.js",
      "args": [
        "--port",
        "2089",
        "--strict",
        // "--trace",
        "--cluster",
        "4"
      ],
      "env": {
        "BLUEBIRD_W_FORGOTTEN_RETURN": "0",
        "BLUEBIRD_LONG_STACK_TRACES": "1",
        "NODE_ENV": "development"
      },
      "cwd": "${workspaceRoot}",
      "sourceMaps": true,
      "noDebug": true,
      "outFiles": [
        "${workspaceRoot}/lib/**/*.js"
      ],
      "smartStep": true,
      "console": "externalTerminal",
      "runtimeArgs": [
        "--max_old_space_size=4096",
        "-r",
        "source-map-support/register"
        // "--prof"
      ],
      "protocol": "inspector"
    },
    {
      // This runs a single worker process with an attached debugger
      "name": "Single Worker",
      "type": "node",
      "request": "launch",
      "program": "${workspaceRoot}/lib/language-server.js",
      "args": [
        "--port",
        "2089",
        "--strict",
        "--cluster",
        "1"
      ],
      "env": {
        "BLUEBIRD_W_FORGOTTEN_RETURN": "0",
        "BLUEBIRD_LONG_STACK_TRACES": "1",
        "NODE_ENV": "development"
      },
      "cwd": "${workspaceRoot}",
      "sourceMaps": true,
      "outFiles": [
        "${workspaceRoot}/lib/**/*.js"
      ],
      "smartStep": true,
      "console": "externalTerminal",
      "runtimeArgs": [
        "--max_old_space_size=4096",
        "-r",
        "source-map-support/register"
        // "--prof"
      ],
      "protocol": "inspector"
    },
    {
      // Runs tests
      "name": "Mocha",
      "type": "node",
      "request": "launch",
      "cwd": "${workspaceRoot}",
      "program": "${workspaceRoot}/node_modules/mocha/bin/_mocha",
      "runtimeArgs": [
        "--require",
        "source-map-support/register"
      ],
      "args": [
        "--no-timeouts",
        "--colors",
        "--bail",
        "--slow",
        "0",
        "${workspaceRoot}/lib/test/**/*.js"
      ],
      "internalConsoleOptions": "openOnSessionStart",
      "sourceMaps": true,
      "protocol": "inspector",
      "outFiles": [
        "${workspaceRoot}/lib/**/*.js"
      ]
    },
    {
      "type": "node",
      "request": "attach",
      "name": "Attach",
      "port": 40400,
      "protocol": "inspector",
      "sourceMaps": true,
      "outFiles": [
        "${workspaceRoot}/lib/**/*.js"
      ]
    }
  ]
}
