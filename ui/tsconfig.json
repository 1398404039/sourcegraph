{
  "compilerOptions": {
    "target": "es5",
    "module": "es6",
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
        "sourcegraph/*": ["web_modules/sourcegraph/*"],
        "vs/*": ["vendor/node_modules/vscode/src/vs/*"],
        "vscode/src/vs/*": ["vendor/node_modules/vscode/src/vs/*"],
        "monaco-languages/*": ["vendor/node_modules/monaco-languages/*"],
        "monaco-typescript/*": ["vendor/node_modules/monaco-languages/*"]
    },
    "lib": ["es2016", "dom"],
    "types": [
        "mocha", "lodash", "flux/utils",
        "../vendor/node_modules/vscode/src/vs/vscode",
        "../vendor/node_modules/vscode/src/vs/monaco"
    ],
    "jsx": "react",
    "relaySchema": "../api/schema.json",
    "sourceMap": true,
    "strictNullChecks": true,
    "experimentalDecorators": true,
    "noUnusedLocals": true,
    "noEmit": true,
    "noImplicitReturns": true
  },
  "exclude": [
    "node_modules",
    "vendor/node_modules",
    "scripts"
  ]
}
