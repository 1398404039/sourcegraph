{
  "name": "sourcegraph",
  "version": "0.0.1",
  "description": "Sourcegraph",
  "engines": {
    "npm": "^5.3.0"
  },
  "scripts": {
    "test": "npm run build-tests && mocha --opts mocha.opts",
    "cover": "npm run build-tests && nyc --require source-map-support/register mocha --opts mocha.opts",
    "test-e2e": "npm run build-tests && mocha --opts mocha.opts.e2e",
    "build": "npm run graphql && npm run schema && npm run webpack",
    "watch": "concurrently --raw \"npm run watch-graphql\" \"npm run watch-schema\" \"npm run watch-webpack\"",
    "watch-webpack": "[ -n \"$USE_WEBPACK_DEV_SERVER\" ] && npm run webpack-dev-server || npm run webpack -- --watch",
    "webpack": "webpack --config webpack.config.ts --colors",
    "webpack-dev-server": "webpack-dev-server --config webpack.config.ts --colors",
    "build-tests": "tsc -p ./tsconfig.test.json",
    "graphql": "cat ../cmd/frontend/internal/graphqlbackend/schema.graphql | gql2ts -o typings/graphqlschema.d.ts && node introspect_schema",
    "watch-graphql": "chokidar --silent ../cmd/frontend/internal/graphqlbackend/schema.graphql --initial -c \"npm run graphql\"",
    "schema": "export DEBUG=; mkdir -p src/schema && cd ../schema && json2ts -i settings.schema.json -o ../web/src/schema/settings.schema.d.ts && json2ts -i site.schema.json -o ../web/src/schema/site.schema.d.ts && cd ../web",
    "watch-schema": "chokidar --silent '../schema/**.schema.json' --initial -c 'npm run schema'",
    "lint": "npm run tslint && npm run stylelint",
    "tslint": "tslint -c tslint.json -p tsconfig.json -e 'node_modules/**' '**/*.ts?(x)'",
    "stylelint": "stylelint --quiet 'src/**/*.scss'",
    "stylelint-compact": "npm run stylelint -- --custom-formatter ./node_modules/stylelint-formatter-compact/index.js"
  },
  "author": "John Rothfels <john@sourcegraph.com>",
  "license": "MIT",
  "nyc": {
    "include": [
      "out/**/*.js"
    ],
    "exclude": [
      "out/**/*.test.js",
      "out/**/*.test.e2e.js"
    ]
  },
  "devDependencies": {
    "@sourcegraph/tsconfig": "^3.0.0",
    "@sourcegraph/tslint-config": "^11.0.1",
    "@types/copy-webpack-plugin": "^4.0.1",
    "@types/d3-scale": "^1.0.10",
    "@types/d3-selection": "^1.2.0",
    "@types/d3-shape": "^1.2.1",
    "@types/escape-string-regexp": "0.0.31",
    "@types/extract-text-webpack-plugin": "^3.0.0",
    "@types/graphql": "^0.11.7",
    "@types/highlight.js": "^9.1.10",
    "@types/js-base64": "^2.1.5",
    "@types/jsdom": "^11.0.2",
    "@types/lodash": "^4.14.38",
    "@types/marked": "^0.3.0",
    "@types/mocha": "^2.2.43",
    "@types/node": "^8.0.28",
    "@types/p-retry": "^1.0.1",
    "@types/react": "^16.0.34",
    "@types/react-dom": "^16.0.3",
    "@types/react-monaco-editor": "^0.10.0",
    "@types/react-router": "^4.0.20",
    "@types/react-router-dom": "^4.2.3",
    "@types/strip-json-comments": "0.0.30",
    "@types/webpack": "^3.8.2",
    "babel-core": "^6.26.0",
    "babel-loader": "^7.1.2",
    "babel-plugin-add-module-exports": "^0.2.1",
    "babel-plugin-transform-new-target": "^7.0.0-beta.0",
    "babel-polyfill": "^6.26.0",
    "babel-preset-env": "^1.6.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-0": "^6.24.1",
    "chokidar-cli": "^1.2.0",
    "chrome-launcher": "^0.8.1",
    "chromeless": "^1.4.0",
    "concurrently": "^3.5.0",
    "copy-webpack-plugin": "^4.3.1",
    "css-loader": "^0.28.4",
    "extract-text-webpack-plugin": "^3.0.2",
    "gql2ts": "^1.4.0",
    "javascript-typescript-langserver": "^2.5.4",
    "jsdom": "^11.2.0",
    "json-schema-to-typescript": "^5.2.2",
    "mocha": "^3.5.3",
    "node-sass": "^4.7.2",
    "node-sass-import-once": "^1.2.0",
    "nyc": "^11.3.0",
    "p-retry": "^1.0.0",
    "postcss-loader": "^2.0.10",
    "sass-loader": "^6.0.6",
    "source-map-support": "^0.5.0",
    "stylelint": "^8.3.1",
    "stylelint-config-prettier": "^2.0.0",
    "stylelint-config-standard": "^18.0.0",
    "stylelint-formatter-compact": "^0.1.0",
    "stylelint-scss": "^2.1.0",
    "ts-graphql-plugin": "^1.1.2",
    "ts-loader": "^3.2.0",
    "ts-node": "^3.3.0",
    "tslint": "^5.8.0",
    "tslint-language-service": "^0.9.6",
    "typescript": "~2.7.0-rc",
    "webpack": "^3.10.0",
    "webpack-bundle-analyzer": "^2.9.1",
    "webpack-dev-server": "^2.10.0"
  },
  "dependencies": {
    "@sourcegraph/icons": "^1.10.1",
    "@sqs/jsonc-parser": "^1.0.1",
    "bootstrap": "^4.0.0-beta",
    "copy-to-clipboard": "^3.0.7",
    "d3-scale": "^1.0.7",
    "d3-selection": "^1.2.0",
    "d3-shape": "^1.2.0",
    "date-fns": "^2.0.0-alpha.7",
    "escape-string-regexp": "^1.0.5",
    "highlight.js": "^9.12.0",
    "immutable": "^3.8.1",
    "js-base64": "^2.3.2",
    "lodash": "^4.11.2",
    "marked": "0.3.7",
    "react": "^16.2.0",
    "react-dom": "^16.2.0",
    "react-monaco-editor": "^0.13.0",
    "react-router": "^4.2.0",
    "react-router-dom": "^4.2.2",
    "react-visibility-sensor": "^3.10.1",
    "rx-component": "^0.0.8",
    "rxjs": "^5.5.2",
    "vscode-languageserver-types": "^3.4.0",
    "whatwg-url": "^6.2.1"
  }
}
