{
  "name": "sourcegraph",
  "version": "0.0.1",
  "description": "Sourcegraph",
  "engines": {
    "npm": "^5.3.0"
  },
  "scripts": {
    "test": "mocha --require ts-node/register --timeout 10000 'src/**/*.test.ts?(x)'",
    "cover": "nyc --require ts-node/register mocha --timeout 10000 'src/**/*.test.ts?(x)'",
    "test-e2e": "mocha --require ts-node/register --timeout 30000 --slow 5000 'src/**/*.test.e2e.ts?(x)'",
    "build": "npm run graphql && npm run schema && npm run webpack",
    "watch": "concurrently --raw \"npm run watch-graphql\" \"npm run watch-schema\" \"npm run watch-webpack\"",
    "watch-webpack": "[ -n \"$USE_WEBPACK_DEV_SERVER\" ] && npm run webpack-dev-server || npm run webpack -- --watch",
    "webpack": "webpack --config webpack.config.ts --colors",
    "webpack-dev-server": "webpack-dev-server --config webpack.config.ts --colors",
    "graphql": "cat ../cmd/frontend/internal/graphqlbackend/schema.graphql | gql2ts -o typings/graphqlschema.d.ts && node introspect_schema",
    "watch-graphql": "chokidar --silent ../cmd/frontend/internal/graphqlbackend/schema.graphql --initial -c \"npm run graphql\"",
    "schema": "export DEBUG=; mkdir -p src/schema && cd ../schema && json2ts -i settings.schema.json -o ../web/src/schema/settings.schema.d.ts && json2ts -i site.schema.json -o ../web/src/schema/site.schema.d.ts && cd ../web",
    "watch-schema": "chokidar --silent '../schema/**.schema.json' --initial -c 'npm run schema'",
    "lint": "npm run tslint && npm run stylelint",
    "tslint": "tslint -c tslint.json -p tsconfig.json -e '{node_modules/**,src/schema/**}' '**/*.ts?(x)'",
    "stylelint": "stylelint --quiet 'src/**/*.scss'",
    "stylelint-compact": "npm run stylelint -- --custom-formatter ./node_modules/stylelint-formatter-compact/index.js"
  },
  "nyc": {
    "include": [
      "src/**/*.ts?(x)"
    ],
    "exclude": [
      "**/*.test.ts?(x)"
    ],
    "extension": [
      ".tsx",
      ".ts"
    ]
  },
  "author": "John Rothfels <john@sourcegraph.com>",
  "license": "MIT",
  "devDependencies": {
    "@sourcegraph/tsconfig": "^3.0.0",
    "@sourcegraph/tslint-config": "^11.0.1",
    "@types/babelify": "^7.3.5",
    "@types/browserify": "^12.0.33",
    "@types/copy-webpack-plugin": "^4.0.1",
    "@types/d3-scale": "^1.0.10",
    "@types/d3-selection": "^1.2.0",
    "@types/d3-shape": "^1.2.1",
    "@types/escape-string-regexp": "0.0.31",
    "@types/extract-text-webpack-plugin": "^3.0.0",
    "@types/get-stream": "^3.0.1",
    "@types/graphql": "^0.11.7",
    "@types/highlight.js": "^9.1.10",
    "@types/js-base64": "^2.1.5",
    "@types/jsdom": "^11.0.4",
    "@types/lodash": "^4.14.92",
    "@types/marked": "^0.3.0",
    "@types/mocha": "^2.2.43",
    "@types/node": "^8.0.28",
    "@types/ora": "^1.3.1",
    "@types/p-retry": "^1.0.1",
    "@types/pretty-bytes": "^4.0.0",
    "@types/react": "^16.0.34",
    "@types/react-dom": "^16.0.3",
    "@types/react-monaco-editor": "^0.10.0",
    "@types/react-router": "^4.0.20",
    "@types/react-router-dom": "^4.2.3",
    "@types/strip-json-comments": "0.0.30",
    "@types/webpack": "^3.8.2",
    "babel-core": "^6.26.0",
    "babel-loader": "^7.1.2",
    "babel-plugin-add-module-exports": "^0.2.1",
    "babel-plugin-istanbul": "^4.1.5",
    "babel-plugin-transform-new-target": "^7.0.0-beta.0",
    "babel-polyfill": "^6.26.0",
    "babel-preset-env": "^1.6.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-0": "^6.24.1",
