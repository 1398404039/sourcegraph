{
  "compilerOptions": {
    "outDir": "./out",
    "target": "es2015",
    "module": "commonjs",
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "baseUrl": "./",
    "paths": {
      "sourcegraph/*": [
        "src/*"
      ],
      "@sourcegraph/components/lib/*": [
        "node_modules/@sourcegraph/components/lib/*"
      ]
    },
    "lib": [
      "es2017",
      "dom",
      "dom.iterable",
      "es2017.object"
    ],
    "jsx": "react",
    "allowJs": true,
    "sourceMap": true,
    "strictNullChecks": true,
    "experimentalDecorators": true,
    "noUnusedLocals": true,
    "noUnusedParameters": false,
    "downlevelIteration": true,
    "forceConsistentCasingInFileNames": true,
    "plugins": [
      {
        "name": "tslint-language-service",
        "configFile": "./tslint.json"
      }
    ]
  }
}
