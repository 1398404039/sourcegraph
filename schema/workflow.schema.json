{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "workflow.schema.json#",
  "title": "Workflow",
  "description": "The definition of a Sourcegraph campaign workflow.",
  "allowComments": true,
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "variables": {
      "$ref": "workflow.schema.json#/definitions/WorkflowVariables"
    },
    "extensions": {
      "$ref": "workflow.schema.json#/definitions/WorkflowRequiredExtensions"
    },
    "template": {
      "type": "string"
    },
    "run": {
      "type": "array",
      "items": {
        "$ref": "workflow.schema.json#/definitions/WorkflowRun"
      }
    },
    "behaviors": {
      "$ref": "workflow.schema.json#/definitions/WorkflowBehaviors"
    }
  },
  "definitions": {
    "WorkflowVariables": {
      "title": "Workflow variables",
      "description": "Variables that are available to the workflow item. Top-level variables are available to all templates, runs, and triggers in the workflow.",
      "type": "object",
      "propertyNames": { "type": "string", "pattern": "^\\w+$" },
      "properties": {
        "createChangesets": {
          "type": "boolean",
          "description": "Whether to create changesets with a suggested fix (if possible)."
        },
        "headBranch": {
          "type": "string",
          "description": "The name of the head branch to use when creating branches for the changesets."
        }
      }
    },
    "WorkflowRun": {
      "title": "Workflow run",
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "variables": {
          "$ref": "workflow.schema.json#/definitions/WorkflowVariables"
        },
        "extensions": {
          "$ref": "workflow.schema.json#/definitions/WorkflowRequiredExtensions"
        },
        "diagnostics": {
          "description": "Diagnostics provider to run.",
          "type": "string"
        },
        "codeActions": {
          "description": "Code actions to run for each diagnostic to produce edits.",
          "type": "array",
          "items": {
            "$ref": "workflow.schema.json#/definitions/Command"
          }
        },
        "commands": {
          "description": "Commands to run to produce side effects.",
          "type": "array",
          "items": {
            "$ref": "workflow.schema.json#/definitions/Command"
          }
        }
      }
    },
    "WorkflowRequiredExtensions": {
      "title": "Workflow required extensions",
      "type": "array",
      "items": { "type": "string", "pattern": "^[\\w./-]+$" }
    },
    "Command": {
      "title": "Command",
      "type": "object",
      "additionalProperties": false,
      "required": ["command"],
      "properties": {
        "command": {
          "description": "The ID of the command to run.",
          "type": "string"
        },
        "arguments": {
          "description": "Extra arguments for the command.",
          "type": "array"
        }
      }
    },
    "WorkflowBehaviors": {
      "title": "Workflow behaviors",
      "description": "The specification of what to do with diagnostics, edits, and other intended side effects produced by the workflow's runs.",
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "edits": {
          "$ref": "workflow.schema.json#/definitions/Command"
        }
      }
    }
  }
}
